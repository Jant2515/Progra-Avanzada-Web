@model IEnumerable<Proyecto_PrograAvanzadaWeb.Models.CarritoItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="ftco-section ftco-cart">
	<div class="container">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="cart-list">
					<table class="table">
						<thead class="thead-primary">
							<tr class="text-center">
								<th>&nbsp;</th>
								<th>&nbsp;</th>
								<th>@Html.DisplayNameFor(model => model.Producto.Nombre)</th>
								<th>
									@Html.DisplayNameFor(model => model.Producto.Precio)
								</th>
								<th>@Html.DisplayNameFor(model => model.Cantidad)</th>
								<th>
									@Html.DisplayNameFor(model => model.Producto.Precio)
								</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model) {
							<tr class="text-center">
									<td class="product-remove">
										<a href="@Url.Action("EliminarDelCarrito", "Carrito", new { id = item.IdCarritoItem })">
											<span class="ion-ios-close"></span>
										</a>
									</td>

									<td class="image-prod"><img class="img" src="@item.Producto.RutaImagen" alt="Imagen del producto"></td>

									<td class="product-name">@Html.DisplayFor(modelItem => item.Producto.Nombre)</td>

									<td class="price">@Html.DisplayFor(modelItem => item.Producto.Precio)</td>

								<td class="quantity">
									<div class="input-group mb-3">
											<input type="text" name="quantity" class="quantity form-control input-number" value="@Html.DisplayFor(modelItem => item.Cantidad)" min="1" max="100">
									</div>
								</td>

									<td class="total">@Html.DisplayFor(modelItem => item.Producto.Precio)</td>
							</tr><!-- END TR-->}
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<div class="row justify-content-end">


			<div class="col-lg-4 mt-5 cart-wrap ftco-animate">
				<div class="cart-total mb-3">
					<p class="d-flex total-price">
						<span>Total</span>
						<span>$17.60</span>
					</p>
				</div>
				<p><a href="checkout.html" class="btn btn-primary py-3 px-4">Proceder con la compra</a></p>
			</div>
		</div>
	</div>
</section>

