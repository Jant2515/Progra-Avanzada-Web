@model Proyecto_PrograAvanzadaWeb.Models.CarritoCompras
@{
    ViewData["Title"] = "AgregarAlCarrito";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>Agregar al Carrito</h2>

<form asp-controller="CarritoCompras" asp-action="AgregarAlCarrito" method="post">
    <div class="form-group">
        <label for="idProducto">Producto:</label>
        <select class="form-control" id="idProducto" name="idProducto">
            @foreach (var producto in ViewBag.ProductosDisponibles)
            {
                <option value="@producto.IdProducto">@producto.Nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="cantidad">Cantidad:</label>
        <input type="number" class="form-control" id="cantidad" name="cantidad" value="1" min="1" max="@ViewBag.MaxCantidad">
    </div>
    <button type="submit" class="btn btn-primary">Agregar al Carrito</button>
</form>

