@model IEnumerable<Proyecto_PrograAvanzadaWeb.Models.Marca>

@{
    ViewData["Title"] = "Listado de Marcas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">

    <h1>Listado de Marcas</h1>

    <p>
        <a asp-action="Create">Agregar Marca</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdMarca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdMarca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activo)
                </td>
                <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.IdMarca }) |
    @*                    @Html.ActionLink("Details", "Details", new { id=item.IdMarca }) |
    *@                    @Html.ActionLink("Delete", "Delete", new { id=item.IdMarca })
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
